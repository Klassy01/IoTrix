# Production Environment Variables for IoTrix Full-Stack App
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=sqlite:///./data/iot_chatbot.db

# OpenAI API Configuration (for AI chatbot)
OPENAI_API_KEY=your_openai_api_key_here

# Application Settings
DEBUG=false
ENVIRONMENT=production

# Security
SECRET_KEY=your_secret_key_here

# CORS Settings (adjust for your domain)
ALLOWED_ORIGINS=["https://your-domain.railway.app", "https://your-custom-domain.com"]

# Logging
LOG_LEVEL=INFO

# Database Pool Settings (for PostgreSQL if used)
# DB_POOL_SIZE=5
# DB_MAX_OVERFLOW=10

# Redis Configuration (if using Redis for caching)
# REDIS_URL=redis://localhost:6379/0

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=30

# Frontend Configuration
VITE_API_BASE_URL=/api
VITE_APP_NAME=IoTrix
VITE_APP_VERSION=1.0.0
